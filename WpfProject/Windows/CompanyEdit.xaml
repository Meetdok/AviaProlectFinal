<Window x:Class="WpfProject.Windows.CompanyEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject.Windows"
        mc:Ignorable="d"
        Title="Редактирование компаний" Height="450" Width="800">
    <Grid>
        <TextBox Text="{Binding Title}" HorizontalAlignment="Left" Margin="85,70,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="21" Width="350" Background="#FFE2CFCF"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="27,65,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding Service}" SelectedItem="{Binding SelectedService}" DisplayMemberPath="ServiceType" HorizontalAlignment="Left" Margin="85,96,0,0" VerticalAlignment="Top" Height="21" Width="131" Background="#FFE2CFCF"/>
        <Label Content="Сервис:" HorizontalAlignment="Left" Margin="37,94,0,0" VerticalAlignment="Top"/>
        <Button Content="Сохранить" Command="{Binding Save}" HorizontalAlignment="Center" Margin="0,371,0,0" VerticalAlignment="Top" Height="45"/>
    </Grid>
</Window>
