        <TextBox Name="txt_Phone" HorizontalAlignment="Left" Margin="158,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" Height="22"/>
        <TextBox Name="txt_Email" HorizontalAlignment="Left" Margin="158,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" Height="22"/>
        <TextBox Name="txt_Login" HorizontalAlignment="Left" Margin="158,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" Height="22"/>
        <TextBox Name="txt_Password" HorizontalAlignment="Left" Margin="158,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="269" Height="22"/>
        <Button Content="Применить" Click="Submit" HorizontalAlignment="Left" Margin="21,316,0,0" VerticalAlignment="Top" Height="34" Cursor="Hand"/>
        <Button Content="Удалить аккаунт" Click="DeleteAccount" HorizontalAlignment="Left" Margin="107,316,0,0" VerticalAlignment="Top" Height="34" Cursor="Hand"/>
    </Grid>
</Window>
